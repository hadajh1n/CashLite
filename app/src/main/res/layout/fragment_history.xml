<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragAll"
    tools:context=".ui.fragments.HistoryFragment">

    <TextView
        android:id="@+id/tvFinance"
        style="@style/tvFinance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Финансы"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMonth"
        style="@style/tvMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ноябрь"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvFinance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvYear"
        style="@style/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025"
        app:layout_constraintTop_toBottomOf="@id/tvMonth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvExpensesTitle"
        style="@style/tvExpensesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Расходы"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvIncomeTitle"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvIncomeTitle"
        style="@style/tvIncomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Доходы"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvYear"
        app:layout_constraintStart_toEndOf="@id/tvExpensesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvExpenses"
        style="@style/tvExpenses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0 ₽"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvExpensesTitle"
        app:layout_constraintStart_toStartOf="@id/tvExpensesTitle"
        app:layout_constraintEnd_toEndOf="@id/tvExpensesTitle"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvIncome"
        style="@style/tvIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0 ₽"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvIncomeTitle"
        app:layout_constraintStart_toStartOf="@id/tvIncomeTitle"
        app:layout_constraintEnd_toEndOf="@id/tvIncomeTitle"
        android:layout_marginTop="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvExpenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        tools:listitem="@layout/item_history" />

</androidx.constraintlayout.widget.ConstraintLayout>